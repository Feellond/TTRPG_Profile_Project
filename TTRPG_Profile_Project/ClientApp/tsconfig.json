{
  "compilerOptions": {
    "baseUrl": "./src", // This must be specified if "paths" is.
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "paths": {
      "shared/*": ["shared/*"],
      "widgets/*": ["widgets/*"],
      "app/*": ["app/*"],
      "pages/*": ["pages/*"],
      "features/*": ["features/*"],
      "entities/*": ["entities/*"],
    },
  },
  "exclude": [
    "node_modules",
    "wwwroot",
  ]
}